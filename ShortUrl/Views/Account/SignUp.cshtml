@model ShortUrl.Web.ViewModels.SignUpViewModel

<div class="container">
    <main role="main" class="pb-3">
        <form asp-controller="Account" asp-action="SignUp" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-check-label">
                <div class="text-center">
                    <h1>Registration</h1>
                    <p>Please fill in this form to create an account</p>
                </div>

                <div class="form-floating">
                    <input class="form-control" asp-for="Name" type="text" placeholder="Enter Name" required>
                    <label asp-for="Name"><b>Name</b></label>
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-floating mt-2">
                    <input class="form-control" asp-for="Email" type="text" placeholder="Enter Email" required>
                    <label asp-for="Email"><b>Email</b></label>
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="form-floating mt-2">
                    <input class="form-control" asp-for="Password" type="password" placeholder="Enter Password" required>
                    <label asp-for="Password"><b>Password</b></label>
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-floating mt-2">
                    <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Repeat Password" required>
                    <label asp-for="ConfirmPassword"><b>Repeat Password</b></label>
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <button class="btn btn-primary btn-lg mt-3" type="submit">Sign Up</button>
            </div>
        </form>
    </main>
</div>